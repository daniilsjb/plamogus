### Append a step to an assignment
POST {{plamogus-host}}/assignments/{assignmentId}/steps
Content-Type: application/json

{
  "title": "Prepare a report from the provided template."
}

### Read all steps of an assignment
GET {{plamogus-host}}/assignments/{assignmentId}/steps
Accept: application/json

### Update a step of an assignment
PUT {{plamogus-host}}/steps/{id}
Content-Type: application/json

{
  "title": "Prepare a report from the provided template."
}

### Delete a step from an assignment
DELETE {{plamogus-host}}/steps/{id}

### Mark a step of an assignment as completed
PUT {{plamogus-host}}/steps/{id}/completion

### Mark a step of an assignment as not completed
DELETE {{plamogus-host}}/steps/{id}/completion
